<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/renk"
    tools:context=".FragmentSpor">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginStart="-50dp"
        android:gravity="center"
        android:background="@drawable/profil_backround">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="SPORHANE"
            android:textColor="@color/renk1"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/profil_backround3">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/gym_sinav" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="ŞINAV"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="120dp"
            android:textColor="@color/renk2"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
        <EditText
            android:id="@+id/sinav_Adet"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="-100dp"
            android:textColor="@color/renk2"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="17dp"
            android:hint="Adet Giriniz"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/profil_backround3">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gym_mekik" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="MEKİK"
            android:textColor="@color/renk2"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/mekik_Adet"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:hint="Adet Giriniz"
            android:textColor="@color/renk2"
            android:textSize="17dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/profil_backround3">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/gym_halter"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="HALTER"
            android:layout_marginStart="-110dp"
            android:layout_marginTop="120dp"
            android:textColor="@color/renk2"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
        <EditText
            android:id="@+id/halter_Adet"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="-100dp"
            android:textColor="@color/renk2"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="17dp"
            android:hint="Adet Giriniz"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/profil_backround3">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/gym_barfiks"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="BARFİKS"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="120dp"
            android:textColor="@color/renk2"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
        <EditText
            android:id="@+id/barfiks_Adet"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="-100dp"
            android:textColor="@color/renk2"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="17dp"
            android:hint="Adet Giriniz"/>
    </LinearLayout>

    <Button
        android:id="@+id/gym_hesapla"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/profil_backround"
        android:text="WORK"
        android:textColor="@color/renk1"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/gym_SonucText"
        android:layout_width="380dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/profil_backround2"
        android:gravity="center"
        android:text="HESAPHANEtmyuyöukkuöuköuıöuöuıö"
        android:textColor="@color/renk2"
        android:textSize="15sp"
        android:textStyle="italic" />


</RelativeLayout>